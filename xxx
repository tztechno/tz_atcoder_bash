//abc173_a payment.sh
##############################
read n
echo $[(10000-n)%1000]
##############################
read n
((n%1000==0)) && echo 0 || echo $(((n/1000+1)*1000-n))
##############################
read val
mod=$(( val % 1000 ))
if [ $mod = 0 ]; then
    echo $mod
else
    echo $(( 1000 - mod ))
fi
##############################
#!/bin/bash
read -r N
A=$(( (1000 - N % 1000) % 1000 ))
echo $A
##############################
